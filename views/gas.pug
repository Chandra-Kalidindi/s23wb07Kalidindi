extends layout

block content
  h1= title
  - let results=[{gas_name:"nylon",quantity:2,types:"silicone"},{gas_name:"sodium",quantity:4,types:"silicone "},{gas_name:"co2",quantity:5,types:"o2"}]
  div(class="row")
  each value,indexValue in results
    div(class="col-sm-2" onclick=`buy(${indexValue})`)  #{value.gas_name} Gas, quantity is #{value.quantity}, type #{value.types}
  script. 
    function buy(indexValue)
    {
      alert(`You purchased Item ${indexValue+1}`)
    } 